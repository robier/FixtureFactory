<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="../vendor/autoload.php" colors="true">
    <testsuites>
        <testsuite name="unit">
            <directory>Unit/</directory>
        </testsuite>
        <testsuite name="functional">
            <directory>Functional/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">../src/</directory>
        </whitelist>
    </filter>
</phpunit>
